@model IEnumerable<InventoryManagmentSystem.Models.Product>

@{
    ViewBag.Title = "Displayproduct";
}

<h2>Display Product</h2>

<p>
    @Html.ActionLink("Create New", "CreateProduct","Product", new {} ,new {@class = "btn btn-primary"})
</p>
<table class="table">
    <tr class="Success">
        <th>
            @Html.DisplayName("Product Name")
        </th>
        <th>
            @Html.DisplayName("Product_quantity")
        </th>
        <th>
            @Html.DisplayName("Actions")

        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_qnty)
        </td>
        <td>
            @Html.ActionLink("Edit", "UpdateProduct" , "Product", new { id=item.id }, new {@class = "btn btn-primary" }) |
            @Html.ActionLink("Details", "ProductDetail", new { id=item.id }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Delete", "DeleteProduct", new { id=item.id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}
    </table>
